[user]
	name = Richard Hitier
	email = richard.hitier@co-libri.org
[alias]
	co = checkout
	ci = commit
	l = log --graph --pretty=\"format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset\"
	s = status -suno
	br = branch
	pull = pull --ff
[core]
	editor = vim
	pager = less -X
[diff]
	tool = vimdiff
[credential]
	helper = cache
[push]
	default = simple
[color]
	ui = true
